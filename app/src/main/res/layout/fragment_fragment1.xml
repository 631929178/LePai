<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.qianfeng.hyh.fragment.Fragment1">
    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  >
        <LinearLayout
            android:id="@+id/liearlayoutHead"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#565A62"
            android:gravity="center_vertical"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="精选"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="器材"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="影像"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="学院"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewLine"
            android:layout_width="120dp"
            android:layout_height="3dp"
            android:layout_below="@id/liearlayoutHead"
            android:layout_above="@+id/viewpager"
            android:background="#DF6108"/>

        <android.support.v4.view.ViewPager

            android:id="@+id/FragmentViewpagerId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v4.view.ViewPager>

    </LinearLayout>

</FrameLayout>
