<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qianfeng.hyh.lepai.WebActivity"
    tools:showIn="@layout/activity_web">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/shareLinearId"
        android:layout_marginBottom="2dp"
        android:background="@drawable/news_bg_bottom"
        >
        <Button
            android:id="@+id/backWebId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/backlogin"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="蜂鸟"
            android:gravity="center"
            android:textSize="10dp"
            />
        <Button
        android:id="@+id/shareWebButoonId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_share_selector"
        android:layout_weight="1"
        />
        <Button
            android:id="@+id/favWebButoonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_fav_selector"
            android:layout_weight="1"
            />

    </LinearLayout>

    <WebView
        android:layout_below="@id/shareLinearId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webId"
        ></WebView>
    <LinearLayout
        android:id="@+id/commentLinearId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/news_bg_bottom"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/comment1Id"
            android:background="@drawable/btn_bottom_publish"
            android:layout_margin="2dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/comment2Id"
            android:background="@drawable/btn_bottom_review"
            android:layout_margin="2dp"
            />

    </LinearLayout>

</RelativeLayout>
