<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qianfeng.hyh.lepai.SharenumActivity"
    tools:showIn="@layout/activity_sharenum">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:orientation="horizontal"
         android:layout_marginTop="2dp"
         android:background="@drawable/news_bg_bottom"
         >
          <Button
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/backlogin"
              android:id="@+id/backsharebuttonId"
              android:layout_marginRight="3dp"
              />
          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="4"
              android:text="收藏"
              android:textSize="15sp"
              android:gravity="center_vertical"
              />

     </LinearLayout>
     <ListView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/shareListview"
         android:layout_margin="6dp"
         >
     </ListView>


</LinearLayout>
